<%- include('./partials/header.ejs')-%>


<div class="new-review">
    <img class='poster' src="<%= newMovieData.data.Poster %>" height="400px">
    <form method="post" action="/newReview">
        <label for="review"> What did you think of <%= newMovieData.data.Title %> </label><br>
        <input class="subBtn" type="text" id="" name="review"><br>
        <label for="user">Name:</label><br>
        <input type="text" id="user" name="user"><br>
        <label for="rating">Rating</label><br>
        <input type="text" id="" name="rating">
        <input type="submit" value="Submit">
        <input type="hidden" id="imdbID" name="imdbID" value="<%= newMovieData.data.imdbID %>" />
    </form>
</div>





